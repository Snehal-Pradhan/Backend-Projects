<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Todos</h1>
    <h2>Count : <%= (todos.filter(t=> t.done).length) %> / <%= (todos.length ) %>
    </h2>
    <% todos.forEach(({task,done})=>{ %>
        <h2>
            <%= task %>
        </h2>
        <p>
            done : <%= done %>
        </p>
        <p>-----</p>
        <% }) %>

</body>

</html>